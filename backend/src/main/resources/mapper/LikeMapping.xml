<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootrobot.dao.LikeDao">

    <insert id="addLike">
        INSERT INTO likes (user_id, project_id)
        VALUES (#{user_id}, #{project_id})
    </insert>

    <delete id="deleteLike">
        DELETE FROM likes WHERE user_id = #{user_id} AND project_id = #{project_id}
    </delete>

    <select id="getLikesByUserId" resultType="org.example.springbootrobot.bean.Like">
        SELECT * FROM likes WHERE user_id = #{user_id}
    </select>

</mapper>