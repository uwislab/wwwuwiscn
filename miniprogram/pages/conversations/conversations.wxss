/* pages/conversations/conversations.wxss */
.container {
  display: block;
}
.add {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 1rem;
  left: 45%;
  width: 88rpx;
  height: 88rpx;
}
.top_image{
  display: table-column
}
.serach {
  margin-top: 18rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  padding-left: 25rpx;
  background-color: #f3f3f3;
  border-radius: 12rpx;
}

.serach_view_show {
  display: block;
  color: #808080;
  padding-left: 285rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  font-size: 18rpx;
  background-color: #f3f3f3;
  border-radius: 12rpx;
}

.message_list {
  flex:1;
  background-color: #f2f2f2;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  margin-top: 8rpx;
  background-color: #fff;
  /**  border: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #d0d0d0;
  border-radius: 5rpx;*/
}

.item-left {
  margin-top: 15rpx;
  display: table-cell;
  text-align: center;
}

.image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #eee;
}

.item-middle {
  flex: 1;
  margin-left: 10rpx;
  padding-top: 1rpx;
  overflow: hidden;
}

.title {
  color: #000;
  font-family: "微软雅黑";
  font-weight: bold;
  /* line-height: 1rpx; */
  /* padding: 32rpx 16rpx, 0, 16rpx; */
  font-size: 22rpx;
  /* margin-top: 60rpx; */
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
}

.message {
  font-family: "微软雅黑";
  color: #808080;
  line-height: 10rpx;
  font-size: 16rpx;
  overflow: hidden !important; /**自动隐藏文字*/
  text-overflow: ellipsis !important; /**文字隐藏后添加省略号*/
  white-space: nowrap !important; /**强制不换行*/
}

.item_right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.time-wrap {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.time {
  color: #808080;
  font-size: 18rpx;
}

.mark {
  margin-top: 4rpx;
  background-color: #f74c31;
  text-align: center;
  line-height: 35rpx;
  font-size: 18rpx;
  width: 35rpx;
  height: 35rpx;
  border-radius: 18rpx;
  color: #fff;
}

.line {
  height: 1px;
  width: 100%;
  background-color: #e0e1e2;
}
/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.modal-header {
  margin-bottom: 40rpx;
  text-align: center;
}

/* .modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
} */

.form-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.label {
  width: 160rpx;
  font-size: 32rpx;
  color: #666;
}

.fixed-value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding-left: 0rpx;
}

.picker-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  margin-left: 300rpx;
}

.confirm-btn {
  height: 88rpx;
  line-height: 55rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}
.back-btn {
  height: 88rpx;
  line-height: 55rpx;
  background: #dadbdb;
  color: rgb(0, 0, 0);
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}
.modal-buttons {
  display: flex;
}