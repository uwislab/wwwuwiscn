/* pages/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx 30rpx;
}

/* 列表容器 */
.info-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  width: 100%;
}

/* 列表条目通用样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

/* 最后一个条目去掉边框 */
.last-item {
  border-bottom: none !important;
}

/* 条目标签样式 */
.item-label {
  font-size: 32rpx;
  color: #333;
  width: 160rpx;
}

/* 条目值样式 */
.item-value {
  flex: 1;
  font-size: 32rpx;
  color: #666;
  text-align: right;
  padding-right: 40rpx;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  right: 60rpx;
}

/* 右箭头图标 */
.arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 30rpx;
}

.edit-content {
  padding: 40rpx;
}

.edit-input {
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
}

.picker {
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}