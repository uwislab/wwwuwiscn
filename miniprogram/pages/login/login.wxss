/* pages/login/login.wxss */

.container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  position: relative;
  overflow: hidden;
}

.decorative-circle {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  top: -300rpx;
  right: -300rpx;
}

.login-content {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80vh;
  background: #fff;
  border-radius: 60rpx 60rpx 0 0;
  padding: 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-section {
  margin-bottom: 80rpx;
  text-align: center;
}

.welcome-text {
  display: block;
  font-size: 38rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 300;
}

.app-name {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
}

.default-avatar {
  width: 400rpx;
  height: 450rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  background: #07c160;
  color: #fff;
  font-size: 34rpx;
  margin-top: auto;
  transition: all 0.3s;
}

.login-btn:active {
  transform: scale(0.98);
}

.agreement {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.modal-header {
  margin-bottom: 40rpx;
  text-align: center;
}