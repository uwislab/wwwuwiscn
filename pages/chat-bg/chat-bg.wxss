/* pages/chat-bg/chat-bg.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 预览区域 */
.preview-section {
  margin-bottom: 40rpx;
}
.section-title {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.current-bg-back{
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  background-color: rgba(58, 58, 58, 0.1);
  display: flex; /* 启用 Flex 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.current-bg {
  width: 220rpx;
  height: 350rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 背景列表 */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.bg-item {
  position: relative;
  width: 220rpx;
  height: 350rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.bg-image {
  width: 100%;
  height: 100%;
}

/* 选中状态 */
.selected {
  border: 4rpx solid #07c160;
}

/* 上传按钮 */
.upload-btn {
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.6;
}
.delete-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}